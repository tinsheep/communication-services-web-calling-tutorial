    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/project"
        },
        {
            "name": "Attach by Process ID",
            "request": "attach",
            "type": "node",
            "processId": "${command:PickProcess}"
        },
        {
            "name": "Attach to Edge",
            "port": 5000,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}